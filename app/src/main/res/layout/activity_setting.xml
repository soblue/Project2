<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.egco.project.project2.Setting">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="USER"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="50dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/addButton"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/add_icon"
        android:layout_gravity="right" />

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="USER01"
        android:id="@+id/user1Button"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="3"
        android:text="USER02"
        android:id="@+id/user2Button"
        android:layout_below="@+id/user1Button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/user1Button"
        android:layout_alignEnd="@+id/user1Button"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="EDIT"
        android:id="@+id/edit1Button"
        android:layout_above="@+id/user2Button"
        android:layout_alignRight="@+id/addButton"
        android:layout_alignEnd="@+id/addButton"
        android:textSize="30dp"
        android:layout_marginLeft="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="USER03"
        android:id="@+id/user3Button"
        android:textSize="30dp"
        android:layout_below="@+id/user2Button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/user2Button"
        android:layout_alignEnd="@+id/user2Button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="EDIT"
        android:id="@+id/edit2Button"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/user2Button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="EDIT"
        android:id="@+id/edit3Button"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/user3Button"
        android:layout_alignRight="@+id/edit2Button"
        android:layout_alignEnd="@+id/edit2Button"
        android:layout_marginLeft="10dp" />

</RelativeLayout>
